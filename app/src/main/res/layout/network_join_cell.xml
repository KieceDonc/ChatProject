<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8sp"
    android:layout_marginTop="8sp"
    android:gravity="center">

    <ImageView
        android:id="@+id/SignalPower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="This description the wifi strength ( the signal power ) between the user device and the wifi network"
        app:srcCompat="@drawable/wifi_icon_weak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SSIDName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exemple of a very very long SSID name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/MacAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>